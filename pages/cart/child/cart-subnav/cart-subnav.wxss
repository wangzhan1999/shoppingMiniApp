.cart-subnav{
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  border-top: solid #f1f1f1 1px;
  font-size: 26rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
}
.cart-subnav > .box{
  flex: 1;
  margin-left: 24rpx;
  position: relative
}
.cart-subnav > .box > .checkbox{
  line-height: 0;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.cart-subnav > .box > text {
  margin-left: 60rpx; 
}
.cart-subnav > .total-price{
  flex: 2
}
.cart-subnav > .total-counter{
  flex: 1;
  text-align: center;
  background-color: #ff5777;
  color: #fff
}